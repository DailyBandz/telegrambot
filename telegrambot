transaction_pattern = r"^(.*?)\n¬£([\d,.]+)(?:\sTotal deal ¬£([\d,.]+))?\n(.*)\n(?:(.*?)(?:\n|$))?(?:Recipient Type: (.*?)\n)?(?:(.*?)(?:\n|$))?(.*?)(?:\n|$).*Done ‚úÖ (\d{1,2}\/\d{1,2})"

